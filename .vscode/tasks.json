{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build docker base image",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/OracleDatabaseInstall"
            },
            "command": "pwd && docker build . --tag oracle/11.2.0.4:base",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build docker run image",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/OracleDatabaseRunnning"
            },
            "command": "pwd && docker build . --tag oracle/11.2.0.4:run",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },        
        {
            "label": "Run docker database image",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/OracleDatabaseRunnning"
            },
            "command": "pwd && docker run -v oracle:/u01 -it -p 1158:1158 -p 1521:1521 -h oracle --name oracle oracle/11.2.0.4:run",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build docker database image",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/OracleDatabaseCreation"
            },
            "command": "pwd && docker build . --tag oracle/11.2.0.4:db",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}