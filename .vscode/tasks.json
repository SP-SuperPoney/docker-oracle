{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build docker image (buildDockerImage.sh)",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/OracleDatabase"
            },
            "command": "pwd && ./buildDockerImage.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build docker base image (oracle/11.2.0.4:base)",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/OracleDatabaseInstall"
            },
            "command": "pwd && docker build . --tag oracle/11.2.0.4:base",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Run docker database creation image (oracle/11.2.0.4:db)",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/OracleDatabaseCreation"
            },
            "command": "pwd && docker run -v oracle:/u01 -it -p 1158:1158 -p 1521:1521 -h oracle --name oracle oracle/11.2.0.4:db",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build docker database image (oracle/11.2.0.4:db)",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/OracleDatabaseCreation"
            },
            "command": "pwd && docker build . --tag oracle/11.2.0.4:db",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Push image to regisry (oracle/11.2.0.4:db)",
            "type": "shell",
            "command": "docker tag oracle/11.2.0.4:db localhost:5000/oracle-db && docker push localhost:5000/oracle-db",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}