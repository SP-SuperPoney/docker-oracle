{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "1. Build docker base image (oracle/11.2.0.4:base)",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/OracleDatabaseInstall"
            },
            "command": "pwd && docker build . --tag oracle/11.2.0.4:base",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },  
        {
            "label": "2. Build docker database image (oracle/11.2.0.4:db)",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/OracleDatabaseCreation"
            },
            "command": "pwd && docker build . --tag oracle/11.2.0.4:db",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "3. Build docker running database image (oracle/11.2.0.4:run)",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/OracleDatabaseRunning"
            },
            "command": "pwd && docker build . --tag oracle/11.2.0.4:run",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },        
        {
            "label": "4. Push image to regisry (oracle/11.2.0.4:run)",
            "type": "shell",
            "command": "docker tag oracle/11.2.0.4:run localhost:5000/oracle-run && docker push localhost:5000/oracle-run",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}